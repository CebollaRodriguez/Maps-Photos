<resources>
    <!-- Base application theme. -->
    <style name="Theme.MapsPhotos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.MapsPhotos.Button</item>
        <item name="cardViewStyle">@style/Widget.MapsPhotos.CardView</item>


        <item name="background">@color/light_background</item>
        <item name="colorAccent">@color/light_text</item>

    </style>

    <style name="Theme.MapsPhotos.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.MapsPhotos.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/inicio_ic</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Theme.MapsPhotos</item>
    </style>

    <style name="Widget.MapsPhotos.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">?attr/background</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.MapsPhotos.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>


</resources>